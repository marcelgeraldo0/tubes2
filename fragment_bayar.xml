<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/from_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:text="Dari : "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/to_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:text="Ke : "/>

        <TextView
            android:id="@+id/date_res1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:text="Tanggal : "/>

        <TextView
            android:id="@+id/date_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:inputType="date"
            android:textSize="20dp"
            android:text="14-05-2021"/>

        <TextView
            android:id="@+id/seat_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:text="Seat : "/>

        <TextView
            android:id="@+id/harga_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:text="Harga : "/>

        <TextView
            android:id="@+id/discount_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:text="Diskon : "/>

        <TextView
            android:id="@+id/total_res"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:text="Total : "/>

        <Button
            android:id="@+id/pesan_btn"
            android:text="Pesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingRight="100dp"
            android:layout_marginTop="50dp"/>

    </LinearLayout>

</FrameLayout>